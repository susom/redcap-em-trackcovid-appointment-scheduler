    {
      "key": "slots-project-testing-sites-event-id",
      "name": "<b>Set the event name for the testing sites from slots project.</b>",
      "required": true,
      "type": "text"
    },
    {
      "key": "allowed-testing-sites",
      "name": "<b>Json object with a list of allowed testing sites.</b>",
      "required": true,
      "type": "textarea"
